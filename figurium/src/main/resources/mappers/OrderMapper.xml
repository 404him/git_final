        insert into orders(id, user_id, payment_type, price, status, created_at, valid)
        values(
                null,
                1,
                #{ paymentType },
                #{ price },
                '준비중',
                CURRENT_TIMESTAMP,
                'y'
                )
    </insert>

    <select id="selectOneLast" resultType="orders">
        select * from orders order by id desc limit 1;
