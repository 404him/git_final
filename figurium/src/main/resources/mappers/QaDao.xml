<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.githrd.figurium.qa.dao.QaDao">

    <!-- Create -->
    <insert id="insert" parameterType="com.githrd.figurium.qa.vo.QaVo">
        INSERT INTO qa (product_id, user_id, title, content, reply, created, updated)
        VALUES (#{productId}, #{userId}, #{title}, #{content}, #{reply}, #{created}, #{updated})
    </insert>

    <!-- Read -->
    <select id="selectById" parameterType="int" resultType="com.githrd.figurium.qa.vo.QaVo">
        SELECT * FROM qa WHERE id = #{id}
    </select>

    <select id="selectAll" resultType="com.githrd.figurium.qa.vo.QaVo">
        SELECT * FROM qa
    </select>

    <select id="selectByProductId" parameterType="int" resultType="com.githrd.figurium.qa.vo.QaVo">
        SELECT * FROM qa WHERE product_id = #{productId}
    </select>

    <!-- Update -->
    <update id="update" parameterType="com.githrd.figurium.qa.vo.QaVo">
        UPDATE qa
        SET title = #{title},
            content = #{content},
            reply = #{reply},
            updated = #{updated}
        WHERE id = #{id}
    </update>

    <!-- Delete -->
    <delete id="delete" parameterType="int">
        DELETE FROM qa WHERE id = #{id}
    </delete>

</mapper>